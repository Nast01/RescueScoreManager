<UserControl x:Class="RescueScoreManager.Modules.Planning.Views.PlanningDefineEvents"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:RescueScoreManager.Modules.Planning.ViewModels">
    
    <UserControl.DataContext>
        <viewModels:PlanningDefineEventsViewModel />
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Competition Info -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Informations de la compétition" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Nom de la compétition" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5" />
                            <TextBox Text="{Binding CompetitionName}" Padding="10,8" BorderBrush="#E0E0E0" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="15,0,0,0">
                            <TextBlock Text="Date de la compétition" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5" />
                            <DatePicker SelectedDate="{Binding CompetitionDate}" Padding="10,8" BorderBrush="#E0E0E0" />
                        </StackPanel>
                    </Grid>
                </StackPanel>
            </Border>
            
            <!-- Events Selection -->
            <Border Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Sélection des épreuves" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" />
                        <Button Content="+ Ajouter une épreuve" Background="#27AE60" Foreground="White"
                                BorderThickness="0" Padding="10,5" FontSize="12" Margin="20,0,0,0"
                                Command="{Binding AddEventCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    
                    <ItemsControl ItemsSource="{Binding Events}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <CheckBox Grid.Column="0" IsChecked="{Binding IsSelected}" Margin="0,0,15,0" />
                                        
                                        <StackPanel Grid.Column="1">
                                            <TextBox Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" BorderThickness="0" Background="Transparent" />
                                            <ComboBox SelectedItem="{Binding Category}" Margin="0,5,0,0" Width="120" HorizontalAlignment="Left">
                                                <ComboBoxItem Content="Individuel" />
                                                <ComboBoxItem Content="Relais" />
                                            </ComboBox>
                                        </StackPanel>
                                        
                                        <Border Grid.Column="2" Background="#E3F2FD" CornerRadius="12" Padding="8,4" Margin="10,0">
                                            <TextBlock Text="{Binding Category}" FontSize="11" Foreground="#1976D2" />
                                        </Border>
                                        
                                        <Button Grid.Column="3" Content="✕" Background="Transparent" BorderThickness="0" 
                                                Foreground="#E74C3C" Padding="5" FontSize="12"
                                                Command="{Binding DataContext.RemoveEventCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}" />
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>