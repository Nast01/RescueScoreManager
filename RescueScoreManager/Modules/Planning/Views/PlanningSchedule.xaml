<UserControl x:Class="RescueScoreManager.Modules.Planning.Views.PlanningSchedule"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:RescueScoreManager.Modules.Planning.ViewModels">
    
    <UserControl.DataContext>
        <viewModels:PlanningScheduleViewModel />
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Schedule Settings -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Configuration des horaires" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15" />
                    
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>
                        
                        <StackPanel Grid.Column="0" Margin="0,0,15,0">
                            <TextBlock Text="Heure de début" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5" />
                            <TextBox Text="{Binding StartTime, StringFormat='HH:mm'}" Padding="10,8" BorderBrush="#E0E0E0" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="1" Margin="15,0">
                            <TextBlock Text="Durée session (min)" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5" />
                            <TextBox Text="{Binding SessionDuration}" Padding="10,8" BorderBrush="#E0E0E0" />
                        </StackPanel>
                        
                        <StackPanel Grid.Column="2" Margin="15,0,0,0">
                            <TextBlock Text="Pause entre épreuves (min)" FontSize="12" Foreground="#7F8C8D" Margin="0,0,0,5" />
                            <TextBox Text="{Binding BreakDuration}" Padding="10,8" BorderBrush="#E0E0E0" />
                        </StackPanel>
                    </Grid>
                    
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,0">
                        <Button Content="Planification automatique" Background="#4A90E2" Foreground="White"
                                BorderThickness="0" Padding="15,8" FontSize="12" Margin="0,0,10,0"
                                Command="{Binding AutoScheduleCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        <Button Content="Planification manuelle" Background="Transparent" Foreground="#7F8C8D"
                                BorderThickness="1" BorderBrush="#E0E0E0" Padding="15,8" FontSize="12"
                                Command="{Binding ManualScheduleCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Schedule Timeline -->
            <Border Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Planning des épreuves" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15" />
                    
                    <ItemsControl ItemsSource="{Binding ScheduledEvents}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" Foreground="#2C3E50" />
                                            <TextBlock Text="{Binding Duration, StringFormat='{}{0} minutes'}" FontSize="12" Foreground="#7F8C8D" />
                                        </StackPanel>
                                        
                                        <Border Grid.Column="1" Background="#E3F2FD" CornerRadius="12" Padding="8,4" Margin="10,0">
                                            <TextBlock Text="{Binding StartTime, StringFormat='HH:mm'}" FontSize="11" Foreground="#1976D2" />
                                        </Border>
                                        
                                        <TextBlock Grid.Column="2" Text="→" FontSize="14" Foreground="#7F8C8D" Margin="5,0" VerticalAlignment="Center" />
                                        
                                        <Border Grid.Column="3" Background="#FFF3E0" CornerRadius="12" Padding="8,4">
                                            <TextBlock Text="{Binding EndTime, StringFormat='HH:mm'}" FontSize="11" Foreground="#F57C00" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>