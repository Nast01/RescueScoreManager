<UserControl x:Class="RescueScoreManager.Modules.Planning.Views.PlanningFinalValidation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:RescueScoreManager.Modules.Planning.ViewModels">
    
    <UserControl.DataContext>
        <viewModels:PlanningFinalValidationViewModel />
    </UserControl.DataContext>
    
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisConverter" />
    </UserControl.Resources>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Validation Summary -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,20">
                        <Rectangle Fill="#27AE60" Width="20" Height="20" RadiusX="3" RadiusY="3" Margin="0,0,10,0" />
                        <TextBlock Text="Résumé de validation" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" />
                        <Border Background="#E8F5E8" CornerRadius="12" Padding="8,4" Margin="15,0,0,0">
                            <TextBlock Text="Prêt à exporter" FontSize="12" Foreground="#388E3C" />
                        </Border>
                    </StackPanel>
                    
                    <!-- Validation Items -->
                    <ItemsControl ItemsSource="{Binding ValidationItems}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="5">
                                    <StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                            <Ellipse Width="12" Height="12" Margin="0,0,8,0">
                                                <Ellipse.Style>
                                                    <Style TargetType="Ellipse">
                                                        <Setter Property="Fill" Value="#27AE60" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding IsValid}" Value="False">
                                                                <Setter Property="Fill" Value="#E74C3C" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Ellipse.Style>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Title}" FontSize="14" FontWeight="SemiBold" />
                                        </StackPanel>
                                        <TextBlock Text="{Binding Status}" FontSize="12" Foreground="#7F8C8D" Margin="20,0,0,0" />
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Export Options -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <TextBlock Text="Options d'export" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15" />
                    
                    <ItemsControl ItemsSource="{Binding ExportFormats}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox IsChecked="{Binding IsSelected}" Margin="0,0,15,0" />
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" />
                                        </StackPanel>
                                    </StackPanel>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Action Buttons -->
            <Border Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Actions finales" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15" />
                    
                    <StackPanel Orientation="Horizontal">
                        <Button Content="Aperçu" Background="Transparent" Foreground="#7F8C8D"
                                BorderThickness="1" BorderBrush="#E0E0E0" Padding="20,10" FontSize="14" Margin="0,0,15,0"
                                Command="{Binding PreviewCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" 
                                            BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="5" 
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="Sauvegarder brouillon" Background="#F39C12" Foreground="White"
                                BorderThickness="0" Padding="20,10" FontSize="14" Margin="0,0,15,0"
                                Command="{Binding SaveDraftCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                        
                        <Button Content="Exporter la compétition" Background="#27AE60" Foreground="White"
                                BorderThickness="0" Padding="20,10" FontSize="14" FontWeight="SemiBold"
                                Command="{Binding ExportCommand}" IsEnabled="{Binding CanExport}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    
                    <!-- Export Status -->
                    <Border Background="#E8F5E8" BorderBrush="#27AE60" BorderThickness="1" 
                            CornerRadius="5" Padding="15,10" Margin="0,20,0,0" Visibility="{Binding CanExport, Converter={StaticResource BoolToVisConverter}}">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="✓" FontSize="16" Foreground="#27AE60" Margin="0,0,10,0" />
                            <TextBlock Text="Tous les éléments sont configurés. La compétition est prête à être exportée." 
                                     FontSize="12" Foreground="#2D5016" TextWrapping="Wrap" />
                        </StackPanel>
                    </Border>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>