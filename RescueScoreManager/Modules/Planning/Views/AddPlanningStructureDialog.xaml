<Window x:Class="RescueScoreManager.Modules.Planning.Views.AddPlanningStructureDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:loc="clr-namespace:RescueScoreManager.Localization"
        Title="{loc:Translate AddPlanningStructure}" 
        Height="400" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    </Window.Resources>
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Race Selection -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="{loc:Translate Race}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding AvailableRaces}"
                      SelectedItem="{Binding SelectedRace}"
                      DisplayMemberPath="Label"
                      Height="35"
                      FontSize="14"/>
        </StackPanel>
        
        <!-- Gender Selection -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="{loc:Translate Gender}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding AvailableGenders}"
                      SelectedItem="{Binding SelectedGender}"
                      Height="35"
                      FontSize="14"/>
        </StackPanel>
        
        <!-- Category Selection -->
        <StackPanel Grid.Row="4">
            <TextBlock Text="{loc:Translate Category}" FontWeight="SemiBold" FontSize="14" Margin="0,0,0,5"/>
            <ComboBox ItemsSource="{Binding AvailableCategories}"
                      SelectedItem="{Binding SelectedCategory}"
                      DisplayMemberPath="Name"
                      Height="35"
                      FontSize="14"/>
        </StackPanel>
        
        <!-- Validation Message -->
        <TextBlock Grid.Row="6" 
                   Text="{Binding ValidationMessage}"
                   Foreground="Red"
                   FontSize="12"
                   Visibility="{Binding HasValidationError, Converter={StaticResource BooleanToVisibilityConverter}}"
                   TextWrapping="Wrap"/>
        
        <!-- Buttons -->
        <StackPanel Grid.Row="8" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button Content="{loc:Translate Cancel}" 
                    Width="80" Height="35" Margin="0,0,10,0"
                    Command="{Binding CancelCommand}"
                    Background="Transparent" 
                    BorderBrush="#CCCCCC" 
                    BorderThickness="1"/>
            <Button Content="{loc:Translate Create}" 
                    Width="80" Height="35"
                    Command="{Binding CreateCommand}"
                    Background="#27AE60" 
                    Foreground="White" 
                    BorderThickness="0"/>
        </StackPanel>
    </Grid>
</Window>
