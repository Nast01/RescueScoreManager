<Window x:Class="RescueScoreManager.Modules.Planning.Views.SiteCreationDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:RescueScoreManager.Modules.Planning.ViewModels"
        Title="Nouveau Site" Height="350" Width="500"
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize"
        Background="White">

  <Grid>
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <TextBlock Grid.Row="0" Text="Créer un nouveau site" 
               FontSize="18" FontWeight="Bold" Foreground="#1F2937" 
               Margin="5,5,5,5"/>

    <!-- Main content -->
    <StackPanel Grid.Row="1" Margin="10">
      <!-- Site Name -->
      <StackPanel Margin="0,0,0,5">
        <TextBlock Text="Nom du site" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Name,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                 BorderThickness="1" Padding="10" Height="35"/>
      </StackPanel>
      
      <!-- Icon Selection -->
      <StackPanel Margin="0,0,0,5">
        <TextBlock Text="Icône" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <ComboBox SelectedItem="{Binding SelectedIcon,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" 
                  ItemsSource="{x:Static local:SiteCreationDialogViewModel.AvailableIcons}"
                  Background="#F9FAFB" BorderBrush="#E5E7EB" BorderThickness="1" 
                  Padding="10" Height="35" FontSize="16"/>
      </StackPanel>
      
      <!-- Site Description -->
      <StackPanel Margin="0,0,0,5">
        <TextBlock Text="Description" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,5"/>
        <TextBox Text="{Binding Description,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Background="#F9FAFB" BorderBrush="#E5E7EB" 
                 BorderThickness="1" Padding="10" Height="50" TextWrapping="Wrap" 
                 AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
      </StackPanel>
    </StackPanel>

    <!-- Footer buttons -->
    <Grid Grid.Row="2" Background="#F8F9FA" Margin="5">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <Button Grid.Column="1" Content="Annuler" Background="Transparent" 
              BorderBrush="#E5E7EB" BorderThickness="1" 
              Margin="0,0,10,0" Click="CancelButton_Click">
        <Button.Template>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    BorderBrush="{TemplateBinding BorderBrush}"
                    BorderThickness="{TemplateBinding BorderThickness}"
                    CornerRadius="6" 
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Button.Template>
      </Button>

      <Button Grid.Column="2" Content="Créer" Background="#2563EB" 
              Foreground="White" BorderThickness="0"
              Command="{Binding CreateCommand}">
        <Button.Template>
          <ControlTemplate TargetType="Button">
            <Border Background="{TemplateBinding Background}" 
                    CornerRadius="6" 
                    Padding="{TemplateBinding Padding}">
              <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
          </ControlTemplate>
        </Button.Template>
      </Button>
    </Grid>
  </Grid>
</Window>
