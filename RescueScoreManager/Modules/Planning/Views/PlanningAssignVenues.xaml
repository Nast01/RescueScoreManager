<UserControl x:Class="RescueScoreManager.Modules.Planning.Views.PlanningAssignVenues"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:viewModels="clr-namespace:RescueScoreManager.Modules.Planning.ViewModels">
    
    <UserControl.DataContext>
        <viewModels:PlanningAssignVenuesViewModel />
    </UserControl.DataContext>
    
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel>
            <!-- Venues Management -->
            <Border Background="White" CornerRadius="8" Padding="20" Margin="0,0,0,20">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                        <TextBlock Text="Gestion des lieux" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" />
                        <Button Content="+ Ajouter un lieu" Background="#27AE60" Foreground="White"
                                BorderThickness="0" Padding="10,5" FontSize="12" Margin="20,0,0,0"
                                Command="{Binding AddVenueCommand}">
                            <Button.Template>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                    </Border>
                                </ControlTemplate>
                            </Button.Template>
                        </Button>
                    </StackPanel>
                    
                    <ItemsControl ItemsSource="{Binding Venues}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="2" />
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="8" Padding="15" Margin="5">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,10">
                                            <Rectangle Fill="#4A90E2" Width="16" Height="16" RadiusX="3" RadiusY="3" Margin="0,0,8,0" />
                                            <TextBox Text="{Binding Name}" FontSize="14" FontWeight="SemiBold" BorderThickness="0" Background="Transparent" />
                                            <Button Content="✕" Background="Transparent" BorderThickness="0" 
                                                    Foreground="#E74C3C" Padding="2" FontSize="12" HorizontalAlignment="Right"
                                                    Command="{Binding DataContext.RemoveVenueCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" />
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="1" Margin="0,0,0,5">
                                            <TextBlock Text="Type" FontSize="11" Foreground="#7F8C8D" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding Type}">
                                                <ComboBoxItem Content="Bassin 50m" />
                                                <ComboBoxItem Content="Bassin 25m" />
                                                <ComboBoxItem Content="Espace" />
                                                <ComboBoxItem Content="Salle" />
                                            </ComboBox>
                                        </StackPanel>
                                        
                                        <StackPanel Grid.Row="2" Margin="0,0,0,5">
                                            <TextBlock Text="Capacité" FontSize="11" Foreground="#7F8C8D" Margin="0,0,0,2" />
                                            <TextBox Text="{Binding Capacity}" />
                                        </StackPanel>
                                        
                                        <Border Grid.Row="3" Background="#E3F2FD" CornerRadius="12" Padding="8,4" Margin="0,5,0,0">
                                            <TextBlock Text="{Binding Type}" FontSize="11" Foreground="#1976D2" HorizontalAlignment="Center" />
                                        </Border>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
            
            <!-- Event Assignment -->
            <Border Background="White" CornerRadius="8" Padding="20">
                <StackPanel>
                    <TextBlock Text="Attribution des épreuves aux lieux" FontSize="18" FontWeight="SemiBold" Foreground="#2C3E50" Margin="0,0,0,15" />
                    
                    <ItemsControl ItemsSource="{Binding EventAssignments}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Background="#F8F9FA" CornerRadius="5" Padding="15" Margin="0,0,0,10">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="20" />
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>
                                        
                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Épreuve" FontSize="11" Foreground="#7F8C8D" Margin="0,0,0,2" />
                                            <TextBlock Text="{Binding EventName}" FontSize="14" FontWeight="SemiBold" />
                                        </StackPanel>
                                        
                                        <TextBlock Grid.Column="1" Text="→" FontSize="16" Foreground="#7F8C8D" HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        
                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Lieu assigné" FontSize="11" Foreground="#7F8C8D" Margin="0,0,0,2" />
                                            <ComboBox SelectedItem="{Binding AssignedVenue}">
                                                <ComboBoxItem Content="Bassin Principal" />
                                                <ComboBoxItem Content="Bassin d'Échauffement" />
                                                <ComboBoxItem Content="Zone Technique" />
                                            </ComboBox>
                                        </StackPanel>
                                        
                                        <Button Grid.Column="3" Content="Configurer" Background="#4A90E2" Foreground="White"
                                                BorderThickness="0" Padding="10,5" FontSize="11" Margin="15,0,0,0"
                                                Command="{Binding DataContext.AssignEventCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}">
                                            <Button.Template>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                                    </Border>
                                                </ControlTemplate>
                                            </Button.Template>
                                        </Button>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </Border>
        </StackPanel>
    </ScrollViewer>
</UserControl>