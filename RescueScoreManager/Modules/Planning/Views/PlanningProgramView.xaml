<UserControl x:Class="RescueScoreManager.Modules.Planning.Views.PlanningProgramView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:loc="clr-namespace:RescueScoreManager.Localization"
             xmlns:viewModels="clr-namespace:RescueScoreManager.Modules.Planning.ViewModels"
             Background="White">

  <UserControl.Resources>
    <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>
    <DropShadowEffect x:Key="CardShadow" ShadowDepth="2" BlurRadius="8" 
                          Color="#00000020" Direction="270"/>

    <!-- Time Slot Template -->
    <DataTemplate x:Key="TimeSlotTemplate">
      <Border Background="Transparent" BorderBrush="#E5E7EB" BorderThickness="0,0,0,1" Height="60" 
                    AllowDrop="True" Drop="OnTimeSlotDrop" DragOver="OnTimeSlotDragOver">
        <Grid>
          <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60"/>
            <ColumnDefinition Width="*"/>
          </Grid.ColumnDefinitions>

          <!-- Time Display -->
          <TextBlock Grid.Column="0" Text="{Binding Time}" FontSize="11" Foreground="#6B7280" 
                               HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,5,0,0"/>

          <!-- Event Container -->
          <ItemsControl Grid.Column="1" ItemsSource="{Binding Events}" Margin="5">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <StackPanel Orientation="Horizontal"/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="{Binding Color}" CornerRadius="6" Margin="0,0,5,0" Padding="8,4" 
                                        MinWidth="120" Cursor="Hand"
                                        MouseMove="OnPlannedEventMouseMove" MouseLeftButtonDown="OnPlannedEventMouseDown">
                  <Grid>
                    <Grid.RowDefinitions>
                      <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                      <ColumnDefinition Width="*"/>
                      <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <StackPanel Grid.Column="0">
                      <TextBlock Text="{Binding Title}" FontSize="11" FontWeight="Bold" 
                                                     Foreground="White" TextTrimming="CharacterEllipsis"/>
                      <TextBlock Text="{Binding Subtitle}" FontSize="9" 
                                                     Foreground="White" Opacity="0.8" TextTrimming="CharacterEllipsis"/>
                    </StackPanel>
                    
                    <Button Grid.Column="1" Background="Transparent" BorderThickness="0" 
                            Width="16" Height="16" Padding="0" Margin="2,0,0,0"
                            Click="OnRemoveEventClick" Cursor="Hand">
                      <TextBlock Text="âœ•" FontSize="10" Foreground="White" Opacity="0.8"/>
                    </Button>
                  </Grid>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </Grid>
      </Border>
    </DataTemplate>

    <!-- Site Column Template -->
    <DataTemplate x:Key="SiteColumnTemplate">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="80"/>
          <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Site Header -->
        <Border Grid.Row="0" Background="{Binding Color}" CornerRadius="8,8,0,0" Margin="2,0">
          <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="{Binding Icon}" FontSize="20" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Bold" 
                                   Foreground="White" HorizontalAlignment="Center"/>
            <TextBlock Text="{Binding Description}" FontSize="9" 
                                   Foreground="White" Opacity="0.8" HorizontalAlignment="Center"/>
          </StackPanel>
        </Border>

        <!-- Time Slots -->
        <ItemsControl Grid.Row="1" ItemsSource="{Binding TimeSlots}" 
                              ItemTemplate="{StaticResource TimeSlotTemplate}" Margin="2,0">
          <ItemsControl.ItemsPanel>
            <ItemsPanelTemplate>
              <StackPanel/>
            </ItemsPanelTemplate>
          </ItemsControl.ItemsPanel>
        </ItemsControl>
      </Grid>
    </DataTemplate>
  </UserControl.Resources>

  <Grid Margin="10">
    <Grid.RowDefinitions>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="*"/>
    </Grid.RowDefinitions>

    <!-- Header -->
    <Grid Grid.Row="0" Margin="0,0,0,10">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="*"/>
        <ColumnDefinition Width="Auto"/>
      </Grid.ColumnDefinitions>

      <!-- Title Section -->
      <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
        <TextBlock Text="ðŸ“…" FontSize="24" Margin="0,0,10,0" VerticalAlignment="Center"/>
        <TextBlock Text="Planificateur de CompÃ©tition" FontSize="24" FontWeight="Bold" 
                           Foreground="#1F2937" VerticalAlignment="Center"/>
      </StackPanel>

      <!-- Buttons Section -->
      <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
        <Border Background="#059669" Padding="12,8" Margin="0,0,10,0" Cursor="Hand">
          <Border.InputBindings>
            <MouseBinding MouseAction="LeftClick" Command="{Binding AddSiteCommand}"/>
          </Border.InputBindings>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="ðŸ“Œ" FontSize="12" Margin="0,0,5,0" Foreground="White"/>
            <TextBlock Text="Nouveau Site" FontSize="12" Foreground="White"/>
          </StackPanel>
        </Border>
        <Border Background="#8B5CF6" Padding="12,8" Margin="0,0,10,0" Cursor="Hand">
          <Border.InputBindings>
            <MouseBinding MouseAction="LeftClick" Command="{Binding SaveCommand}"/>
          </Border.InputBindings>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="ðŸ’¾" FontSize="12" Margin="0,0,5,0" Foreground="White"/>
            <TextBlock Text="Sauvegarder" FontSize="12" Foreground="White"/>
          </StackPanel>
        </Border>
        <Border Background="#10B981" Padding="12,8" Cursor="Hand">
          <Border.InputBindings>
            <MouseBinding MouseAction="LeftClick" Command="{Binding ExportCommand}"/>
          </Border.InputBindings>
          <StackPanel Orientation="Horizontal">
            <TextBlock Text="ðŸ“¤" FontSize="12" Margin="0,0,5,0" Foreground="White"/>
            <TextBlock Text="Exporter" FontSize="12" Foreground="White"/>
          </StackPanel>
        </Border>
      </StackPanel>
    </Grid>

    <!-- Date Navigation -->
    <Border Grid.Row="1" Background="#F3F4F6" CornerRadius="8" Padding="15" Margin="0,0,0,10">
      <Grid>
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="*"/>
          <ColumnDefinition Width="Auto"/>
          <ColumnDefinition Width="Auto"/>
        </Grid.ColumnDefinitions>

        <!-- Search -->
        <TextBox Grid.Column="0" Text="{Binding SearchText,UpdateSourceTrigger=PropertyChanged,Mode=TwoWay}" Width="200" Height="32" 
                         Background="White" BorderBrush="#D1D5DB" BorderThickness="1" 
                         Padding="10,8" Margin="0,0,15,0">
          <TextBox.Style>
            <Style TargetType="TextBox">
              <Style.Triggers>
                <Trigger Property="Text" Value="">
                  <Setter Property="Background">
                    <Setter.Value>
                      <VisualBrush AlignmentX="Left" AlignmentY="Center" Stretch="None">
                        <VisualBrush.Visual>
                          <TextBlock Text="Rechercher..." Foreground="#9CA3AF" 
                                                               Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </VisualBrush.Visual>
                      </VisualBrush>
                    </Setter.Value>
                  </Setter>
                </Trigger>
              </Style.Triggers>
            </Style>
          </TextBox.Style>
        </TextBox>

        <!-- Date Navigation -->
        <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center">
          <Button Background="Transparent" BorderThickness="0" Padding="2" 
                            Command="{Binding PreviousDayCommand}">
            <TextBlock Text="â—€" FontSize="16" Foreground="#6B7280"/>
          </Button>
          <TextBlock Text="{Binding CurrentDateDisplay}" FontSize="16" FontWeight="Bold" 
                               Foreground="#1F2937" VerticalAlignment="Center" Margin="20,0"/>
          <Button Background="Transparent" BorderThickness="0" Padding="2" 
                            Command="{Binding NextDayCommand}">
            <TextBlock Text="â–¶" FontSize="16" Foreground="#6B7280"/>
          </Button>
        </StackPanel>

      </Grid>
    </Border>

    <!-- Main Content -->
    <Grid Grid.Row="2">
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="300"/>
        <ColumnDefinition Width="*"/>
      </Grid.ColumnDefinitions>

      <!-- Left Panel - Events to Plan -->
      <Border Grid.Column="0" Background="#F9FAFB" CornerRadius="12" Margin="0,0,10,0">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <!-- Left Panel Header -->
          <StackPanel Grid.Row="0" Margin="10,10,10,10">
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
              <TextBlock Text="ðŸ“‹" FontSize="16" Margin="0,0,8,0"/>
              <TextBlock Text="Ã‰preuves Ã  planifier" FontSize="16" FontWeight="Bold" 
                                       Foreground="#1F2937"/>
              <Border Background="#F59E0B" CornerRadius="10" Padding="6,2" Margin="8,0,0,0">
                <TextBlock Text="{Binding EventsToplanCount}" FontSize="11" FontWeight="Bold" 
                                           Foreground="White"/>
              </Border>
            </StackPanel>
            <Border Background="#3B82F6" CornerRadius="6" Padding="8,6" Margin="5,0,0,10" Cursor="Hand" Width="120" HorizontalAlignment="Left">
              <Border.InputBindings>
                <MouseBinding MouseAction="LeftClick" Command="{Binding CreateManualTimeSlotCommand}"/>
              </Border.InputBindings>
              <StackPanel Orientation="Horizontal">
                <TextBlock Text="âž•" FontSize="10" Margin="0,0,5,0" Foreground="White"/>
                <TextBlock Text="CrÃ©neau manuel" FontSize="10" Foreground="White"/>
              </StackPanel>
            </Border>
          </StackPanel>

          <!-- Events List -->
          <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="10,0">
            <ItemsControl ItemsSource="{Binding FilteredEventsToplan}">
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Background="White" BorderBrush="#E5E7EB" BorderThickness="1" 
                                            CornerRadius="8" Margin="10,5" Padding="12" Cursor="Hand"
                                            MouseMove="OnEventMouseMove" MouseLeftButtonDown="OnEventMouseDown"
                                            AllowDrop="False" Effect="{StaticResource CardShadow}">
                    <Grid>
                      <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                      </Grid.RowDefinitions>

                      <StackPanel Grid.Row="0" Orientation="Vertical" Margin="0,0,0,8">
                        <Border Background="{Binding ConfigurationColor}" CornerRadius="4" 
                                                        Padding="4,2" Margin="8,0,0,0">
                          <TextBlock Text="{Binding ConfigurationLabel}" FontSize="9"
                                                               FontWeight="Bold" Foreground="White" TextWrapping="Wrap"/>
                        </Border>
                        <StackPanel Orientation="Horizontal">
                          <Border Background="{Binding StatusColor}" Width="12" Height="12" 
                                                        CornerRadius="6" Margin="0,0,8,0" VerticalAlignment="Center"/>
                          <TextBlock Text="{Binding Name}" FontSize="10" FontWeight="Bold"  TextWrapping="Wrap"
                                                           Foreground="#1F2937" TextTrimming="CharacterEllipsis"/>
                        </StackPanel>
                      </StackPanel>

                      <StackPanel Grid.Row="1" Orientation="Horizontal" Margin="0,0,0,5">
                        <TextBlock Text="ðŸ‘¥" FontSize="10" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding ParticipantCount}" FontSize="10" 
                                                           Foreground="#6B7280" Margin="0,0,3,0"/>
                        <TextBlock Text="participants" FontSize="10" 
                                                           Foreground="#6B7280" Margin="0,0,15,0"/>
                        <TextBlock Text="â±ï¸" FontSize="10" Margin="0,0,5,0"/>
                        <TextBlock Text="{Binding Duration}" FontSize="10" 
                                                           Foreground="#6B7280" Margin="0,0,3,0"/>
                        <TextBlock Text="min" FontSize="10" 
                                                           Foreground="#6B7280"/>
                      </StackPanel>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </ScrollViewer>
        </Grid>
      </Border>

      <!-- Calendar View -->
      <ScrollViewer Grid.Column="1" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">
        <Grid>
          <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
          </Grid.RowDefinitions>

          <!-- Sites Header -->
          <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
              <!-- Dynamic column definitions will be handled by code-behind or use ItemsControl with UniformGrid -->
            </Grid.ColumnDefinitions>
            <ItemsControl ItemsSource="{Binding Sites}">
              <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                  <UniformGrid Rows="1"/>
                </ItemsPanelTemplate>
              </ItemsControl.ItemsPanel>
              <ItemsControl.ItemTemplate>
                <DataTemplate>
                  <Border Height="80" Background="{Binding Color}" 
                          CornerRadius="8,8,0,0" Margin="2,0">
                    <Grid>
                      <!-- Close Button -->
                      <Button HorizontalAlignment="Right" VerticalAlignment="Top" 
                              Background="Transparent" BorderThickness="0" Padding="5"
                              Command="{Binding DataContext.RemoveSiteCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                              CommandParameter="{Binding}">
                        <TextBlock Text="âœ•" FontSize="12" Foreground="White" Opacity="0.8"/>
                      </Button>

                      <!-- Site Info -->
                      <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="{Binding Icon}" FontSize="20" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Name}" FontSize="12" FontWeight="Bold" 
                                                       Foreground="White" HorizontalAlignment="Center"/>
                        <TextBlock Text="{Binding Description}" FontSize="9" 
                                                       Foreground="White" Opacity="0.8" HorizontalAlignment="Center"/>
                      </StackPanel>
                    </Grid>
                  </Border>
                </DataTemplate>
              </ItemsControl.ItemTemplate>
            </ItemsControl>
          </Grid>

          <!-- Calendar Grid -->
          <ItemsControl Grid.Row="1" ItemsSource="{Binding Sites}">
            <ItemsControl.ItemsPanel>
              <ItemsPanelTemplate>
                <UniformGrid Rows="1"/>
              </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
              <DataTemplate>
                <Border Background="White" BorderBrush="#E5E7EB" 
                                        BorderThickness="1,0,1,1" Margin="2,0">
                  <ItemsControl ItemsSource="{Binding TimeSlots}" 
                                                  ItemTemplate="{StaticResource TimeSlotTemplate}">
                    <ItemsControl.ItemsPanel>
                      <ItemsPanelTemplate>
                        <StackPanel/>
                      </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                  </ItemsControl>
                </Border>
              </DataTemplate>
            </ItemsControl.ItemTemplate>
          </ItemsControl>
        </Grid>
      </ScrollViewer>
    </Grid>
  </Grid>
</UserControl>
