<UserControl x:Class="RescueScoreManager.Modules.Properties.GeneraleTabView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RescueScoreManager.Modules.Properties"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:loc="clr-namespace:RescueScoreManager.Localization"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
  <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
    <Grid>
      <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="Auto"/>
      </Grid.RowDefinitions>
      <Grid.ColumnDefinitions>
        <ColumnDefinition Width="1*"/>
        <ColumnDefinition Width="1*"/>
      </Grid.ColumnDefinitions>

      <!-- Competition Settings -->
      <materialDesign:Card Grid.Row="0" Grid.Column="0" Margin="4" 
                                 materialDesign:ColorZoneAssist.Mode="Standard"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
        <StackPanel Margin="16,12">
          <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <materialDesign:PackIcon Kind="Settings" VerticalAlignment="Center" 
                                               Width="18" Height="18" Margin="0,0,8,0"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="{loc:Translate Competition}" FontWeight="Medium" FontSize="14"
                                  Foreground="{DynamicResource MaterialDesignBody}"/>
          </StackPanel>

          <ComboBox SelectedValue="{Binding NumberOfLanes, UpdateSourceTrigger=PropertyChanged}"
                             SelectedValuePath="Tag"
                             materialDesign:HintAssist.Hint="{loc:Translate Lanes}" Margin="0,4"
                             Style="{StaticResource MaterialDesignOutlinedComboBox}" FontSize="12">
            <ComboBoxItem Content="1" Tag="1"/>
            <ComboBoxItem Content="2" Tag="2"/>
            <ComboBoxItem Content="3" Tag="3"/>
            <ComboBoxItem Content="4" Tag="4"/>
            <ComboBoxItem Content="5" Tag="5"/>
            <ComboBoxItem Content="6" Tag="6"/>
            <ComboBoxItem Content="7" Tag="7"/>
            <ComboBoxItem Content="8" Tag="8"/>
            <ComboBoxItem Content="9" Tag="9"/>
            <ComboBoxItem Content="10" Tag="10"/>
          </ComboBox>
        </StackPanel>
      </materialDesign:Card>

      <!-- Ranking Settings -->
      <materialDesign:Card Grid.Row="0" Grid.Column="1" Margin="4"
                                 materialDesign:ColorZoneAssist.Mode="Standard"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
        <StackPanel Margin="16,12">
          <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <materialDesign:PackIcon Kind="Trophy" VerticalAlignment="Center" 
                                               Width="18" Height="18" Margin="0,0,8,0"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="{loc:Translate Ranking}" FontWeight="Medium" FontSize="14"
                                  Foreground="{DynamicResource MaterialDesignBody}"/>
          </StackPanel>

          <StackPanel Orientation="Horizontal" Margin="0,4">
            
              <RadioButton Content="{loc:Translate IsRankingByTime, StringFormat='Par temps: {0}'}"
                                   Command="{Binding SelectRankingByTimeCommand}" GroupName="RankingType"
                                    FontSize="12"/>

            <RadioButton Content="{loc:Translate IsRankingByFinal, StringFormat='Par finale: {0}'}"
                                   Command="{Binding SelectRankingByFinalCommand}" GroupName="RankingType"
                                    FontSize="12"/>
          </StackPanel>

          <CheckBox Content="{loc:Translate RelayByHeatFinals}" IsChecked="{Binding IsRelayByHeatFinal, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignCheckBox}" Margin="0,4" FontSize="12"/>

          <CheckBox Margin="0,4"
                                 Content="{loc:Translate ForeignPoints}" FontSize="12"
                                 IsChecked="{Binding HasPointForeignAthlete, UpdateSourceTrigger=PropertyChanged}"
                                 Style="{StaticResource MaterialDesignCheckBox}" 
                                 VerticalAlignment="Center"/>
        </StackPanel>
      </materialDesign:Card>

      <!-- Club Participation -->
      <materialDesign:Card Grid.Row="1" Grid.Column="0" Margin="4"
                                 materialDesign:ColorZoneAssist.Mode="Standard"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
        <StackPanel Margin="16,12">
          <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <materialDesign:PackIcon Kind="AccountGroup" VerticalAlignment="Center" 
                                               Width="18" Height="18" Margin="0,0,8,0"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="{loc:Translate Participation}" FontWeight="Medium" FontSize="14"
                                  Foreground="{DynamicResource MaterialDesignBody}"/>
          </StackPanel>

          <TextBox Text="{Binding NumberOfAthleteComputedByClub, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="{loc:Translate AthletesPerClub}" Margin="0,4"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" FontSize="12"/>

          <TextBox Text="{Binding NumberOfRelayComputedByClub, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="{loc:Translate RelaysPerClub}" Margin="0,4"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" FontSize="12"/>
        </StackPanel>
      </materialDesign:Card>

      <!-- System Settings -->
      <materialDesign:Card Grid.Row="1" Grid.Column="1" Margin="4"
                                 materialDesign:ColorZoneAssist.Mode="Standard"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
        <StackPanel Margin="16,12">
          <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
            <materialDesign:PackIcon Kind="Cog" VerticalAlignment="Center" 
                                               Width="18" Height="18" Margin="0,0,8,0"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="{loc:Translate System}" FontWeight="Medium" FontSize="14"
                                  Foreground="{DynamicResource MaterialDesignBody}"/>
          </StackPanel>

          <CheckBox Content="{loc:Translate ARES}" IsChecked="{Binding HasAres, UpdateSourceTrigger=PropertyChanged}"
                             Style="{StaticResource MaterialDesignCheckBox}" Margin="0,4" FontSize="12"/>

          <TextBox Text="{Binding ChronoPath, UpdateSourceTrigger=PropertyChanged}"
                            materialDesign:HintAssist.Hint="{loc:Translate ChronoPath}" Margin="0,4"
                            Style="{StaticResource MaterialDesignOutlinedTextBox}" FontSize="12"/>
        </StackPanel>
      </materialDesign:Card>

      <!-- Final Settings -->
      <materialDesign:Card Grid.Row="2" Grid.ColumnSpan="2" Margin="4"
                                 materialDesign:ColorZoneAssist.Mode="Standard"
                                 materialDesign:ElevationAssist.Elevation="Dp2">
        <StackPanel Margin="16,12">
          <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
            <materialDesign:PackIcon Kind="Medal" VerticalAlignment="Center" 
                                               Width="18" Height="18" Margin="0,0,8,0"
                                               Foreground="{DynamicResource MaterialDesignBody}"/>
            <TextBlock Text="{loc:Translate FinalSettings}" FontWeight="Medium" FontSize="14"
                                  Foreground="{DynamicResource MaterialDesignBody}"/>
          </StackPanel>

          <Grid>
            <Grid.ColumnDefinitions>
              <ColumnDefinition Width="1*"/>
              <ColumnDefinition Width="1*"/>
              <ColumnDefinition Width="1*"/>
            </Grid.ColumnDefinitions>

            <TextBox Grid.Column="0" Margin="0,0,8,0"
                                Text="{Binding NumberOfForeignAthleteInFinal, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="{loc:Translate ForeignAthletesInFinal}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" FontSize="12"/>

            <TextBox Grid.Column="1" Margin="8,0"
                                Text="{Binding NumberOfAthleteInFinal, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="{loc:Translate TotalInFinal}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" FontSize="12"/>

            <TextBox Grid.Column="2" Margin="8,0"
                                Text="{Binding NumberMinOfAthleteInFinalByHeat, UpdateSourceTrigger=PropertyChanged}"
                                materialDesign:HintAssist.Hint="{loc:Translate MinPerHeat}"
                                Style="{StaticResource MaterialDesignOutlinedTextBox}" FontSize="12"/>
          </Grid>
        </StackPanel>
      </materialDesign:Card>
    </Grid>
  </ScrollViewer>
</UserControl>
